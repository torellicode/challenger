<div id="announcement_<%= announcement.id %>" class="flex justify-between items-start">
  <div>
    <%= link_to announcement.title, announcement_path(announcement), 
        class: "text-sm font-medium text-gray-900 hover:text-indigo-600" %>
    <p class="text-xs text-gray-500 mt-1">
      <%= time_ago_in_words(announcement.published_at) %> ago
    </p>
  </div>
  <%= button_to mark_read_announcement_path(announcement), 
      method: :post,
      class: "text-xs text-gray-500 hover:text-indigo-500",
      data: { turbo: true } do %>
    <%= heroicon "check", variant: :outline, options: { class: "w-4 h-4" } %>
  <% end %>
</div>
