<%= form_with(model: [:admin, announcement], class: "space-y-6") do |f| %>
  <% if announcement.errors.any? %>
    <div class="bg-red-50 p-4 rounded-md">
      <h2 class="text-red-800 text-sm font-medium"><%= pluralize(announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>
      <ul class="mt-3 list-disc list-inside text-red-700 text-sm">
        <% announcement.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-field" %>
  </div>

  <div>
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, rows: 5, class: "form-field" %>
  </div>

  <div class="flex justify-end">
    <%= link_to "Cancel", admin_announcements_path, class: "btn-cancel" %>
    <%= f.submit class: "btn-blue" %>
  </div>
<% end %>
