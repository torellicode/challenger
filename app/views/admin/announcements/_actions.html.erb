<div class="flex gap-2 mt-1">
  <% if announcement.published? %>
    <%= button_to unpublish_admin_announcement_path(announcement), method: :post, class: "text-yellow-600 hover:text-yellow-800", title: "Unpublish" do %>
      <%= heroicon "eye-slash", options: { class: "h-5 w-auto" } %>
    <% end %>
  <% else %>
    <%= button_to publish_admin_announcement_path(announcement), method: :post, class: "text-green-600 hover:text-green-800", title: "Publish" do %>
      <%= heroicon "eye", options: { class: "h-5 w-auto" } %>
    <% end %>
  <% end %>
  <%= link_to edit_admin_announcement_path(announcement), class: "text-blue-600 hover:text-blue-800", title: "Edit" do %>
    <%= heroicon "pencil-square", options: { class: "h-5 w-auto" } %>
  <% end %>
  <%= button_to admin_announcement_path(announcement), method: :delete, class: "text-red-600 hover:text-red-800", title: "Delete", data: { confirm: "Are you sure?" } do %>
    <%= heroicon "trash", options: { class: "h-5 w-auto" } %>
  <% end %>
</div>
