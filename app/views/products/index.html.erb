<div class="bg-gradient-to-b from-blue-300 to-blue-50 py-10 h-full">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="mt-2 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
        Find the perfect plan for your needs
      </h2>
      <p class="mt-6 text-lg leading-8 text-gray-800">
        Choose the plan that works best for you. All plans include our core features.
      </p>
    </div>

    <div class="mx-auto mt-16 max-w-7xl">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 lg:gap-8 justify-center">
        <% @products.each do |product| %>
          <div class="relative flex flex-col rounded-2xl border border-blue-100 bg-white p-8 shadow-sm transition-all hover:shadow-lg">
            <%# Header %>
            <div class="mb-5">
              <h3 class="text-2xl font-bold leading-8 text-gray-900">
                <%= product.name %>
              </h3>
              
              <div class="mt-4 flex items-baseline">
                <span class="text-4xl font-bold tracking-tight text-gray-900">
                  $<%= product.price_in_dollars %>
                </span>
                <% if product.subscription? %>
                  <span class="ml-1 text-sm font-semibold leading-6 text-gray-600">
                    /<%= product.billing_period %>
                  </span>
                <% end %>
              </div>
            </div>

            <%# Description %>
            <p class="mt-4 text-base leading-7 text-gray-600">
              <%= product.description %>
            </p>

            <%# Features List %>
            <div class="mt-8 space-y-3 flex-grow">
              <h4 class="text-sm font-semibold leading-6 text-gray-900">What's included:</h4>
              <ul role="list" class="space-y-3 text-sm leading-6 text-gray-600">
                <%# LIST FEATURES HERE%>
              </ul>
            </div>

            <%# CTA Button %>
            <%= link_to product_path(product), 
                class: "mt-8 block w-full rounded-lg bg-blue-600 px-4 py-3 text-center text-sm font-semibold text-white shadow hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors" do %>
              Learn More
              <%= heroicon "arrow-right", options: { class: "ml-2 -mr-1 inline-block h-4 w-4" } %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <%# Trust Indicators %>
    <div class="mx-auto mt-16 max-w-2xl">
      <div class="rounded-2xl bg-white p-8 shadow-sm ring-1 ring-gray-200">
        <div class="text-center">
          <h3 class="text-lg font-semibold leading-8 text-gray-900">
            Trusted by companies worldwide
          </h3>
          <div class="mt-6 flex items-center justify-center gap-x-6">
            <%= heroicon "shield-check", options: { class: "h-12 w-12 text-blue-600" } %>
            <div class="text-left">
              <div class="text-base font-semibold text-gray-900">Money-back Guarantee</div>
              <div class="mt-1 text-sm text-gray-600">Try risk-free for 30 days</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%# Contact CTA %>
    <div class="mx-auto mt-8 text-center">
      <p class="text-base leading-7 text-gray-600">
        Have questions? 
        <a href="#" class="font-semibold text-blue-600 hover:text-blue-500">
          Contact our sales team
        </a>
      </p>
    </div>
  </div>
</div>
