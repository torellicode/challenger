<div class="bg-gradient-to-b from-blue-300 to-blue-50 py-10 rounded-lg h-full">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-3xl">
      <%# Navigation %>
      <nav class="mb-8">
        <%= link_to products_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" do %>
          <%= heroicon "arrow-long-left", options: { class: "inline-block h-4 w-4 mr-1" } %>
          Back to all plans
        <% end %>
      </nav>

      <%# Main Content %>
      <div class="overflow-hidden rounded-2xl border border-blue-100 bg-white shadow">
        <div class="p-8 sm:p-10">
          <%# Header %>
          <h2 class="text-3xl font-bold tracking-tight text-gray-900">
            <%= @product.name %>
          </h2>

          <%# Price %>
          <div class="mt-4 flex items-baseline">
            <span class="text-5xl font-bold tracking-tight text-gray-900">
              $<%= @product.price_in_dollars %>
            </span>
            <% if @product.subscription? %>
              <span class="ml-1 text-lg font-semibold leading-6 text-gray-600">
                /<%= @product.billing_period %>
              </span>
            <% end %>
          </div>

          <%# Description %>
          <div class="mt-8 prose prose-blue max-w-none">
            <%= @product.description %>
          </div>

          <%# Features %>
          <div class="mt-10">
            <h3 class="text-sm font-semibold leading-6 text-gray-900">Everything you get:</h3>
            <ul role="list" class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
              <%# LIST FEATURES HERE %>
            </ul>
          </div>

          <%# Checkout Button %>
          <div class="mt-10">
            <%= form_tag checkouts_path(product_id: @product.id), 
                data: { 
                  controller: "checkout",
                  action: "submit->checkout#checkout"
                } do %>
              <%= submit_tag "Buy Now", class: "buy-button" %>
            <% end %>
          </div>
        </div>

        <%# Trust Footer %>
        <div class="border-t border-gray-200 bg-gray-50 px-8 py-6 sm:px-10">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= heroicon "shield-check", options: { class: "h-6 w-6 text-blue-600" } %>
              <p class="ml-3 text-sm text-gray-600">
                Secure payment processing with Stripe
              </p>
            </div>
            <div class="flex items-center">
              <%= heroicon "arrow-path", options: { class: "h-6 w-6 text-blue-600" } %>
              <p class="ml-3 text-sm text-gray-600">
                30-day money-back guarantee
              </p>
            </div>
          </div>
        </div>
      </div>

      <%# Support CTA %>
      <div class="mt-8 text-center">
        <p class="text-base text-gray-600">
          Questions about this plan? 
          <a href="#" class="font-semibold text-blue-600 hover:text-blue-500">
            Contact our sales team
          </a>
        </p>
      </div>
    </div>
  </div>
</div>
