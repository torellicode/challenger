<nav class="bg-white border-b border-gray-200 sticky top-0 z-50" data-controller="nav">
  <%# Overlay for mobile menu %>
  <div data-nav-target="overlay" class="hidden fixed top-16 inset-0 bg-gray-800 bg-opacity-75 z-40"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <%# Left side: Logo and navigation %>
      <div class="flex">
        <%# Logo %>
        <div class="flex-shrink-0 flex items-center">
          <%= link_to root_path, class: "text-xl font-bold text-blue-600" do %>
            <%= app_title %>
          <% end %>
        </div>

        <%# Main navigation - Desktop %>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <%= link_to "Home", root_path, 
              class: "#{current_page?(root_path) ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
          
          <% if current_user&.admin? %>
            <%= link_to "Admin", admin_dashboard_path, 
                class: "#{current_page?(admin_dashboard_path) ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
          <% end %>
        </div>
      </div>

      <%# Right side: User actions %>
      <div class="flex items-center space-x-4">
        <%# Announcements dropdown - Visible on all screens %>
        <div class="relative">
          <button type="button"
                  data-action="nav#toggleDropdown"
                  data-dropdown-id="announcements"
                  class="p-1 text-gray-600 hover:text-gray-900 focus:outline-none">
            <span class="sr-only">View announcements</span>
            <%= heroicon "bell", variant: :outline, options: { class: "h-6 w-6" } %>
            <div id="announcement_badge" data-announcement-target="badge">
              <% if current_user && (unread_count = current_user.unread_announcements.count) > 0 %>
                <span class="absolute top-1 right-1 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-white transform translate-x-1/2 -translate-y-1/2 bg-red-600 rounded-full">
                  <%= unread_count %>
                </span>
              <% end %>
            </div>
          </button>
          
          <div data-nav-target="dropdown"
               data-dropdown-id="announcements"
               class="hidden absolute right-0 mt-2 w-80 bg-white rounded-lg shadow-lg py-1 ring-1 ring-black ring-opacity-5 z-50">
            <%= render "announcements/announcement_popup" %>
          </div>
        </div>

        <%# User account dropdown - Desktop %>
        <div class="relative hidden sm:block">
          <button type="button"
                  data-action="nav#toggleDropdown"
                  data-dropdown-id="userMenu"
                  class="flex items-center space-x-2 text-sm text-gray-700 hover:text-gray-900 focus:outline-none">
            <span class="font-medium"><%= current_user&.username %></span>
            <%= heroicon "chevron-down", variant: :outline, options: { class: "h-5 w-5 text-gray-400" } %>
          </button>
          
          <div data-nav-target="dropdown"
               data-dropdown-id="userMenu"
               class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 ring-1 ring-black ring-opacity-5 z-50">
            <%= link_to "Your Profile", edit_user_registration_path, 
                class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                data: { action: "nav#closeAll" } %>
            <%= button_to "Sign out", destroy_user_session_path, 
                method: :delete, 
                class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                data: { action: "nav#closeAll" } %>
          </div>
        </div>

        <%# Mobile menu button - Only visible on small screens %>
        <div class="-mr-2 flex items-center sm:hidden">
          <button type="button" 
                  class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
                  data-action="nav#toggleMenu"
                  data-nav-target="openButton">
            <%= heroicon "bars-3", variant: :outline, options: { class: "block h-6 w-6" } %>
          </button>
          <button type="button" 
                  class="hidden inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
                  data-action="nav#toggleMenu"
                  data-nav-target="closeButton">
            <%= heroicon "x-mark", variant: :outline, options: { class: "block h-6 w-6" } %>
          </button>
        </div>
      </div>
    </div>

    <%# Mobile menu %>
    <div class="sm:hidden hidden absolute top-16 inset-x-0 bg-white shadow-lg border-b border-gray-200 z-50" 
         data-nav-target="mobileMenu">
      <%# Navigation Links %>
      <div class="pt-2 pb-3 space-y-1">
        <%= link_to "Home", root_path,
            class: "#{current_page?(root_path) ? 'bg-blue-50 border-blue-500 text-blue-700' : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'} block pl-3 pr-4 py-2 border-l-4 text-base font-medium",
            data: { action: "nav#handleNavClick" } %>
        
        <% if current_user&.admin? %>
          <%= link_to "Admin", admin_dashboard_path,
              class: "#{current_page?(admin_dashboard_path) ? 'bg-blue-50 border-blue-500 text-blue-700' : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'} block pl-3 pr-4 py-2 border-l-4 text-base font-medium",
              data: { action: "nav#handleNavClick" } %>
        <% end %>
      </div>

      <%# User Account Section - Mobile %>
      <div class="pt-4 pb-3 border-t border-gray-200">
        <div class="px-4">
          <div class="text-base font-medium text-gray-800"><%= current_user&.username %></div>
          <div class="text-sm font-medium text-gray-500"><%= current_user&.email %></div>
        </div>
        <div class="mt-3 space-y-1">
          <%= link_to "Your Profile", edit_user_registration_path,
              class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100",
              data: { action: "nav#handleNavClick" } %>
          <%= button_to "Sign out", destroy_user_session_path,
              method: :delete,
              class: "w-full text-left px-4 py-2 text-base font-sm text-red-500 hover:text-gray-800 hover:bg-gray-100",
              data: { action: "nav#handleNavClick" } %>
        </div>
      </div>
    </div>
  </div>
</nav>
