<div data-controller="nav">
  <nav class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <%# Logo and primary navigation %>
        <div class="flex">
          <%# Logo/Home link %>
          <div class="flex-shrink-0 flex items-center">
            <%= link_to root_path, class: "text-xl font-bold text-indigo-600" do %>
              <%= app_title %>
            <% end %>
          </div>

          <%# Desktop navigation %>
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <%= link_to "Home", root_path, 
                class: "#{current_page?(root_path) ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
            
            <% if current_user&.admin? %>
              <%= link_to "Admin", admin_dashboard_path,
                  class: "#{request.path.start_with?('/admin') ? 'border-indigo-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
            <% end %>
          </div>
        </div>

        <%# Right side navigation items %>
        <div class="hidden sm:ml-6 sm:flex sm:items-center sm:space-x-4">
          <%= render "announcements/announcement_icon" %>

          <%# User dropdown %>
          <% if current_user %>
            <div class="relative" data-controller="dropdown">
              <button type="button" 
                      class="flex items-center text-sm text-gray-500 hover:text-gray-700"
                      data-action="dropdown#toggle">
                <%= current_user.username %>
                <%= heroicon "chevron-down", variant: :outline, options: { class: "ml-1 w-4 h-4" } %>
              </button>

              <div data-dropdown-target="menu" 
                   class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5">
                <div class="py-1">
                  <%= link_to "Account Settings", edit_user_registration_path, 
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                  <%= button_to "Logout", destroy_user_session_path, 
                      method: :delete,
                      class: "w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-100" %>
                </div>
              </div>
            </div>
          <% else %>
            <%= link_to "Login", new_user_session_path, 
                class: "text-sm text-gray-500 hover:text-gray-700" %>
            <%= link_to "Sign up", new_user_registration_path, 
                class: "text-sm text-white bg-indigo-600 hover:bg-indigo-700 px-3 py-2 rounded-md" %>
          <% end %>
        </div>

        <%# Mobile menu button %>
        <div class="flex items-center space-x-2 sm:hidden">
          <div>
            <%= render "announcements/announcement_icon" %>
          </div>
          <button type="button" 
                  class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
                  data-action="nav#toggleMenu">
            <span data-nav-target="openButton">
              <%= heroicon "bars-3", variant: :outline, options: { class: "h-6 w-6" } %>
            </span>
            <span data-nav-target="closeButton" class="hidden">
              <%= heroicon "x-mark", variant: :outline, options: { class: "h-6 w-6" } %>
            </span>
          </button>
        </div>
      </div>
    </div>

    <%# Mobile menu - now fixed position %>
    <div class="sm:hidden fixed inset-x-0 bg-white shadow-lg z-50" data-nav-target="mobileMenu">
      <div class="pt-2 pb-3 space-y-1">
        <%= link_to "Home", root_path,
            class: "#{current_page?(root_path) ? 'bg-indigo-50 border-indigo-500 text-indigo-700' : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'} block pl-3 pr-4 py-2 border-l-4 text-base font-medium" %>
        
        <% if current_user&.admin? %>
          <%= link_to "Admin", admin_dashboard_path,
              class: "#{request.path.start_with?('/admin') ? 'bg-indigo-50 border-indigo-500 text-indigo-700' : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'} block pl-3 pr-4 py-2 border-l-4 text-base font-medium" %>
        <% end %>
      </div>

      <%# Mobile menu user section %>
      <div class="pt-4 pb-3 border-t border-gray-200">
        <% if current_user %>
          <div class="flex items-center px-4">
            <div class="flex-shrink-0">
              <%= heroicon "user-circle", variant: :outline, options: { class: "h-10 w-10 text-gray-400" } %>
            </div>
            <div class="ml-3">
              <div class="text-base font-medium text-gray-800"><%= current_user.username %></div>
            </div>
          </div>
          <div class="mt-3 space-y-1">
            <%= link_to "Account Settings", edit_user_registration_path,
                class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100" %>
            <%= button_to "Logout", destroy_user_session_path, 
                method: :delete,
                class: "w-full text-left px-4 py-2 text-base font-medium text-red-600 hover:bg-gray-100" %>
          </div>
        <% else %>
          <div class="space-y-1 px-4">
            <%= link_to "Login", new_user_session_path, 
                class: "block py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100" %>
            <%= link_to "Sign up", new_user_registration_path, 
                class: "block py-2 text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 rounded-md text-center" %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</div>
