<div class="pt-2 pb-3 space-y-1">
  <%= link_to "Home", root_path,
      class: "#{current_page?(root_path) ? 'bg-blue-50 border-blue-500 text-blue-700' : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'} block pl-3 pr-4 py-2 border-l-4 text-base font-medium",
      data: { action: "nav#handleNavClick" } %>
  
  <% if current_user&.admin? %>
    <%= link_to "Admin", admin_dashboard_path,
        class: "#{current_page?(admin_dashboard_path) ? 'bg-blue-50 border-blue-500 text-blue-700' : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'} block pl-3 pr-4 py-2 border-l-4 text-base font-medium",
        data: { action: "nav#handleNavClick" } %>
  <% end %>
</div>
