<div class="pt-4 pb-3 border-t border-gray-200">
  <div class="px-4">
    <div class="text-base font-medium text-gray-800"><%= current_user.username %></div>
    <div class="text-sm font-medium text-gray-500"><%= current_user.email %></div>
  </div>
  <div class="mt-3 space-y-1">
    <%= link_to "Your Profile", edit_user_registration_path,
        class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100",
        data: { action: "nav#handleNavClick" } %>
        
    <%= button_to main_app.destroy_user_session_path,
        method: :delete,
        form: { 
          data: { turbo: false },
          class: "button_to"
        },
        class: "w-full text-left px-4 py-2 text-base font-medium text-red-600 hover:bg-gray-100",
        data: { action: "nav#handleNavClick" } do %>
      Sign out
    <% end %>
  </div>
</div>
