<div class="p-4">
  <h3 class="text-lg font-medium text-blue-600 mb-4">Announcements</h3>
  
  <div id="announcements_popup_content">
    <% if current_user&.unread_announcements.present? %>
      <div class="space-y-4">
        <% current_user.unread_announcements.limit(5).each do |announcement| %>
          <%= render partial: "shared/nav/announcement_item", locals: { announcement: announcement } %>
        <% end %>
      </div>
      
      <div class="mt-4 pt-2 border-t border-gray-200">
        <%= button_to mark_all_read_announcements_path, 
            method: :post,
            class: "text-sm text-blue-600 hover:text-blue500",
            data: { turbo: true } do %>
          Mark all as read
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500">No unread announcements</p>
    <% end %>
  </div>
  
  <%= link_to "View all announcements", announcements_path, 
      class: "block mt-2 text-sm text-blue-600 hover:text-blue-500" %>
</div>
