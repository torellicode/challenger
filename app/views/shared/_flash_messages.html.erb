<% if notice.present? || alert.present? %>
  <div id="flash-messages" class="mb-4">
    <% if notice %>
      <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="bg-green-50 p-4 rounded-md border border-green-800">
          <p class="text-green-800"><%= notice %></p>
        </div>
      </div>
    <% end %>

    <% if alert %>
      <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="bg-red-50 p-4 rounded-md border border-red-800">
          <p class="text-red-800"><%= alert %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
