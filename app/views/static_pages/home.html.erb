<h1>StaticPages#home</h1>
<p>Find me in app/views/static_pages/home.html.erb</p>

<% if current_user %>
  <%= button_to "logout", destroy_user_session_path, method: :delete, class: "text-indigo-600 hover:text-indigo-500" %>
  <%= link_to "edit profile", edit_user_registration_path, class: "text-indigo-600 hover:text-indigo-500" %>
<% else %>
  <%= link_to "login", new_user_session_path, class: "text-indigo-600 hover:text-indigo-500" %>
  <%= link_to "signup", new_user_registration_path, class: "text-indigo-600 hover:text-indigo-500" %>
<% end %>

<%= link_to "admin dashboard", admin_dashboard_path, class: "text-indigo-600 hover:text-indigo-500" %>

<div data-controller="announcement">
  <% if (count = Announcement.recent_published.count) > 0 %>
    <button 
      data-announcement-target="button"
      data-action="announcement#toggle"
      class="fixed bottom-4 right-4 inline-flex items-center px-4 py-2 rounded-md bg-indigo-600 text-white hover:bg-indigo-700">
      Announcements
      <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
        <%= count %>
      </span>
    </button>

    <% if latest = Announcement.recent_published.first %>
      <div 
        data-announcement-target="popup"
        class="hidden fixed bottom-16 right-4 w-80 bg-white shadow-lg rounded-lg p-4 z-50">
        <div class="flex justify-between items-start">
          <h3 class="font-medium text-gray-900"><%= latest.title %></h3>
          <button 
            data-action="announcement#toggle" 
            class="text-gray-400 hover:text-gray-500">
            <span class="sr-only">Close</span>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
        <p class="mt-1 text-sm text-gray-500">
          <%= truncate(latest.content, length: 100) %>
        </p>
        <%= link_to "Read more", announcement_path(latest), 
            class: "mt-2 inline-block text-sm text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  <% else %>
    <p>No announcements</p>
  <% end %>
</div>
